extends ../layout/admin
block content
  div.container
    h1 Posts
    hr
    a.pure-button.pure-button-primary(href="/admin/posts/new") Create
    .row(style="margin-top: 10px;")
      .col-sm-12
        table.pure-table.pure-table-bordered
          thead
            tr
              th ID
              th Title
              th Format
              th Link
              th Status
              th Created At
              th Updated At
              th.operations Operations

          tbody
            for post in posts
              tr
                td #{post.getId()}
                td #{post.getTitle()}
                td #{post.getPostFormat()}
                td #{post.getLink()}
                td #{post.getPostStatus()}
                td #{post.getCreatedAt()}
                td #{post.getUpdatedAt()}
                td.operations
                  a.btn.btn-xs.btn-info.btn-flat(href="/posts/#{post.getLink()}", target:'_blank')
                    i.fa.fa-eye
                  a.btn.btn-xs.btn-primary.btn-flat(href="/admin/posts/#{post.getId()}/edit")
                    i.fa.fa-edit
                  a.btn.btn-xs.btn-danger.btn-delete.btn-flat(href="javascript:;", onclick="deletePost('#{post.getId()}','#{post.getTitle()}')")
                    i.fa.fa-trash-o


        .col-sm-12
          div#pagination
