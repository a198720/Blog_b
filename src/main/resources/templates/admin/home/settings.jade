extends ../layout/admin
block content
  div.container
    h1 Settings
    hr
    form.pure-form(method="post",action="/admin/settings")
      table.pure-table.pure-table-bordered
        tbody
          tr
            td.setting-label Site Name
            td
              input.form-control(type="text", name="siteName", value="#{settings.getSiteName()}")
          tr
            td.setting-label Site Slogan
            td
              input.form-control(type="text", name="slogan", value="#{settings.getSlogan()}")
          tr
            td.setting-label Notification
            td
              input.form-control(type="text", name="notification", value="#{settings.getNotification()}")
          tr
            td.setting-label
            td.input
              input.btn.btn-primary(type="submit", value="Save")

